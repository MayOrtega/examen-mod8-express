<%- include("./template/header.ejs", {title: 'Iniciar Sesión'}) %>

<center>
    <div class="container">
      <br>
      <p class="h1" style="color: #C70039; background-color: black; width: 300px; border-radius: 10px; padding: 1%;">Login</p>
      <br>
      <form action="logueando" method="post">
        <div class="form-outline mb-4">
          <input type="text" id="form2Example1" name="ingresarNombre" placeholder="Usuario" autofocus
            class="form-control"   style="width : 300px; border: solid black 3px;"/>
        </div>
        <div class="form-outline mb-4">
          <input type="password" id="form2Example2" name="ingresarPassword" placeholder="Contraseña"
            class="form-control" style="width : 300px; border: solid black 3px;" />
        </div>
        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <div class="form-check">
            </div>
          </div>
          <div class="col">
          </div>
        </div>
        <button type="submit" class="btn btn-dark btn-block mb-4" style="border: solid #C70039 2px;">Ingresar</button>
        <div class="text-center" style="text-align: center;">
          <p style="background-color:#C70039; width:600px; padding: 1%; border-radius:5px; margin-left: 25%;">¿No estás registrado? <a href="/web/registro">Registrarse aquí</a></p>
        </div>
      </form>
    </div>
  </center>
 
