<%- include("./template/header.ejs", {title: 'Iniciar Sesión'}) %>

<center>
    <div class="container">
      <br>
      <p class="h1" style="color: #C70039; background-color: black; width: 300px; border-radius: 10px; padding: 1%;">Login</p>
      <br>
      <form action="loggedIn" method="post">
        <div class="form-outline mb-4">
          <input type="text" id="form2Example1" name="enterName" placeholder="Usuario" autofocus
            class="form-control"   style="width : 300px; border: solid black 3px; margin-top:5%"/>
        </div>
        <div class="form-outline mb-4">
          <input type="password" id="form2Example2" name="enterPassword" placeholder="Contraseña"
            class="form-control" style="width : 300px; border: solid black 3px; margin-top:2%;" />
        </div>
        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <div class="form-check">
            </div>
          </div>
          <div class="col">
          </div>
        </div>
        <button type="submit" class="btn btn-dark btn-block mb-4" style="border: solid #C70039 2px; margin-top: 5%;">Ingresar</button>
        <div class="text-center" style="text-align: center;">
          <p style="background-color:#C70039; width:600px; padding: 1%; border-radius:5px; margin-left: 25%; margin-top: 10%">¿No estás registrado? <a href="/web/register">Registrarse aquí</a></p>
        </div>
      </form>
    </div>
  </center>
 
  <br>
